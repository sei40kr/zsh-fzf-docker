# -*- mode: sh -*-

# fzf-docker-container-rm-f
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-container-rm-f() {
    docker container ls -a |
        eval "fzf ${FZF_DEFAULT_OPTS} -m --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker container rm -f
}

fzf-docker-container-rm-f "$@"
