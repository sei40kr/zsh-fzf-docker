# -*- mode: sh -*-

# fzf-docker-network-inspect
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-network-inspect() {
    docker network ls |
        eval "fzf ${FZF_DEFAULT_OPTS} --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker network inspect
}

fzf-docker-network-inspect "$@"
