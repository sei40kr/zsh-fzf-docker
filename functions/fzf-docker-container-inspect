# -*- mode: sh -*-

# fzf-docker-container-inspect
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-container-inspect() {
    docker container ls -a |
        eval "fzf ${FZF_DEFAULT_OPTS} --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker container inspect
}

fzf-docker-container-inspect "$@"
