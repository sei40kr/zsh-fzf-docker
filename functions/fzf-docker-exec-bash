# -*- mode: sh -*-

# fzf-docker-exec-bash
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-exec-bash() {
    docker container ls |
        eval "fzf ${FZF_DEFAULT_OPTS} --header-lines=1" |
        awk '{ print $1 }' |
        xargs -I _ docker exec -it _ /bin/bash
}

fzf-docker-exec-bash "$@"
