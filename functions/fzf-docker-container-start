# -*- mode: sh -*-

# fzf-docker-container-start
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-container-start() {
    docker container ls -af status=created -f status=exited |
        eval "fzf ${FZF_DEFAULT_OPTS} -m --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker container start
}

fzf-docker-container-start "$@"
