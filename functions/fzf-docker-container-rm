# -*- mode: sh -*-

# fzf-docker-container-rm
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-container-rm() {
    docker container ls -f status=created -f status=exited |
        eval "fzf ${FZF_DEFAULT_OPTS} -m --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker container rm
}

fzf-docker-container-rm "$@"
