# -*- mode: sh -*-

# fzf-docker-container-stop
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-container-stop() {
    docker container ls |
        eval "fzf ${FZF_DEFAULT_OPTS} -m --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker container stop
}

fzf-docker-container-stop "$@"
