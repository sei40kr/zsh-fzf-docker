# -*- mode: sh -*-

# fzf-docker-volume-inspect
# author: Seong Yong-ju <sei40kr@gmail.com>

fzf-docker-volume-inspect() {
    docker volume ls |
        eval "fzf ${FZF_DEFAULT_OPTS} --header-lines=1" |
        awk '{ print $1 }' |
        xargs docker volume inspect
}

fzf-docker-volume-inspect "$@"
